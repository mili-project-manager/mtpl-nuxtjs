{
  "engines": [
    "^4.3.0"
  ],
  "extends": [
    "npm:@mtpl/base",
    "npm:@mtpl/github",
    "npm:@mtpl/conventional-commits",
    {
      "template": "npm:@mtpl/code-style",
      "answers": {
        "framework": "node"
      }
    }
  ],
  "loaders": [
    {
      "name": "markdown-section",
      "options": {
        "key": "readme",
        "filepath": "README.md",
        "sections": [
          "title",
          "description"
        ]
      }
    }
  ]
}
